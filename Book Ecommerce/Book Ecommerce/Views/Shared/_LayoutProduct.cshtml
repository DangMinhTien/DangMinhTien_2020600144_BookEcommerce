
@{
    Layout = "_Layout.cshtml";
}

<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-12">
            <!-- SideBar Start -->
            <partial name="_SideBarPartial"></partial>
            <!-- SideBar End -->
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
                <div class="col-12 pb-1 px-2">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <form asp-action="Index" asp-controller="Products" method="get">
                            <div class="input-group">
                                <input name="search" type="text" class="form-control" placeholder="Tìm kiếm theo tên" value="@ViewBag.search">
                                <button type="submit" class="searchproduct bg-transparent border-0 p-0">
                                    <div class="input-group-append h-100">
                                        <span class="input-group-text bg-transparent text-primary">
                                            <i class="fa fa-search"></i>
                                        </span>
                                    </div>
                                </button>
                            </div>
                        </form>
                        <partial name="_PageSizePartial" model="@ViewBag.pageSize"></partial>
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->
@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}
