<div class="m-toast-box">
    @if (TempData["success"] != null || TempData["error"] != null || TempData["infor"] != null)
    {
        @if (TempData["success"] != null)
        {
            <div class="m-toast-message m-toast-success">
                <div class="m-toast-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="m-toast-text">@TempData["success"]</div>
                <div class="m-toast-close">
                    <i class="fas fa-times"></i>
                </div>
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="m-toast-message m-toast-error">
                <div class="m-toast-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="m-toast-text">@TempData["error"]</div>
                <div class="m-toast-close">
                    <i class="fas fa-times"></i>
                </div>
            </div>
        }
        @if(TempData["infor"] != null)
        {
            <div class="m-toast-message m-toast-infor">
                <div class="m-toast-icon">
                    <i class="fas fa-info-circle"></i>
                </div>
                <div class="m-toast-text">@TempData["infor"]</div>
                <div class="m-toast-close">
                    <i class="fas fa-times"></i>
                </div>
            </div>
        }
    }
</div>
