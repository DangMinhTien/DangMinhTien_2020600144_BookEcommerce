@model Book_Ecommerce.ViewModels.LoginVM
@{
    ViewData["Title"] = "Trang Đăng nhập";
    Layout = "~/Views/Shared/_LayoutLoginRegister.cshtml";
}
<div class="row" style="height: 97vh;">
    <div class="col-lg-4 col-md-2 col-sm-12"></div>
    <div class="col-lg-4 col-md-8 col-sm-12 d-flex h-100" style="padding: 0 !important">
        <div class="form-loin-register m-auto flex-grow-1">
            <h1 class="text-primary">Đăng nhập</h1>
            <form asp-action="Login" asp-controller="Accounts" method="post" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="text-dark">Email</label>
                    <input asp-for="Email" type="text" class="form-control" placeholder="Địa chỉ email">
                </div>
                <div class="form-group">
                    <label class="text-dark">Mật khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu">
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="checkpassword">
                        <label class="custom-control-label" for="checkpassword">Hiện mật khẩu</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100 rounded">Đăng nhập</button>
            </form>
            <div class="mt-3">
                <a asp-action="ForgotPassword" asp-controller="Accounts" class="text-primary">Quên mật khẩu ?</a>
            </div>
            <div class="mt-2">
                <a asp-action="Register" asp-controller="Accounts" class="text-primary">Đăng ký</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-2 col-sm-12"></div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <script type="text/javascript">
        $('#checkpassword').change(function () {
            if ($(this).is(":checked")) {
                $('#Password').attr('type', 'text')
            }
            else {
                $('#Password').attr('type', 'password')
            }
        })
    </script>
}