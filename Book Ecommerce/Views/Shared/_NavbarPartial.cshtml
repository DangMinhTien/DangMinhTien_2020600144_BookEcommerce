@using Microsoft.AspNetCore.Identity
@using Book_Ecommerce.Domain.Entities

@inject IAuthorizationService authorizationService
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{
}
<nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
    <a href="" class="text-decoration-none d-block d-lg-none">
        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
    </a>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
        <div class="navbar-nav mr-auto py-0">
            <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Trang chủ</a>
            <a asp-action="Index" asp-controller="Products" asp-area="" class="nav-item nav-link">Sản Phẩm</a>
            @{
                var ResultAuthor = await authorizationService.AuthorizeAsync(User, "IsCustomer");
                if (ResultAuthor.Succeeded)
                {
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Tài khoản</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a asp-action="Index" asp-controller="AccountsProfile" asp-area="" class="dropdown-item">Thông tin tài khoản</a>
                            <a asp-action="Index" asp-controller="MyOrders" class="dropdown-item">Đơn hàng của tôi</a>
                        </div>
                    </div>
                }
            }
            
        </div>
            <div class="navbar-nav ml-auto py-0">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-action="Logout" asp-controller="Accounts" class="nav-item nav-link">Đăng xuất</a>
                }
                else
                {
                    <a asp-action="Login" asp-controller="Accounts" class="nav-item nav-link">Đăng nhập</a>
                }
                <a asp-action="Register" asp-controller="Accounts" class="nav-item nav-link">Đăng ký</a>
            </div>
    </div>
</nav>